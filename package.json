{
  "name": "amt-commander",
  "version": "0.2.1",
  "main": "electron/dist/main.js",
  "description": "AMT Commander is a standalone device management console for interacting with Intel Active Management Technology (AMT) devices over the local network",
  "author": {
    "name": "Matt C. Primrose"
  },
  "scripts": {
    "ng": "ng",
    "json-server": "node server.js --watch db.json",
    "ng-serve": "ng serve",
    "clean": "rimraf dist",
    "prestart": "npm run build",
    "start": "npm run electron",
    "electron": "tsc --p electron && electron .",
    "prebuild": "npm run clean",
    "build": "ng build",
    "build:prod": "ng build --configuration=production",
    "test": "ng test",
    "test:prod": "ng test --browsers=ChromeHeadless --watch=false --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "prerelease": "npm run build -- --configuration=production",
    "release": "electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.0.2",
    "@angular/cdk": "^16.0.1",
    "@angular/common": "^16.0.0",
    "@angular/compiler": "^16.0.0",
    "@angular/core": "^16.0.0",
    "@angular/forms": "^16.0.0",
    "@angular/material": "^16.0.1",
    "@angular/platform-browser": "^16.0.0",
    "@angular/platform-browser-dynamic": "^16.0.0",
    "@angular/router": "^16.0.0",
    "@open-amt-cloud-toolkit/wsman-messages": "^5.5.0",
    "json-server": "^0.17.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^9.0.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.0.2",
    "@angular/cli": "~16.2.0",
    "@angular/compiler-cli": "^16.0.0",
    "@types/angular-material": "^1.1.73",
    "@types/electron": "^1.6.10",
    "@types/jasmine": "~4.3.4",
    "@types/uuid": "^9.0.1",
    "electron": "^26.0.0",
    "electron-builder": "^24.4.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "rimraf": "^5.0.1",
    "typescript": "~5.0.2"
  }
}
